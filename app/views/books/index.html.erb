<div class="notice"><%= notice %></div>

<header>
<h2>Books</h2>
</header>

<table>
    <tr class="title">
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr class="naiyou">
        <th class="naiyou-shousai">
            <%= book.title %>
        </th>
        <th class="naiyou-shousai">
            <%= book.body %>
        </th>
        <th class"naiyou-shousai">
           <%= link_to "Show", book_path(book.id),method: :get %>
           <%= link_to "Edit", edit_book_path(book.id),method: :get %>
           <%= link_to "Delete", book_path(book.id),method: :delete,"data-confirm" =>"Are you sure?" %>
        </th>
    </tr>

    <% end %>
   </table>

 <footer>
  <h3>New book</h3>
<%= form_with model:@book, local:true do |f| %>

    <% if @book.errors.any? %>
        <ul>
            <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

  <div>Title</div>
  <div class="text"><%= f.text_field :title %></div>
  <div>Body</div>
  <div class="text"><%= f.text_area :body %></div>
  <div><%= f.submit"Create Book" %></div>
  <% end %>
</footer>